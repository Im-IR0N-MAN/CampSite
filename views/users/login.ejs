<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5 px-5">
    <div class="row">
        <div class="col form-col ml-5">
            <img class="form-img left-round"
                src="https://res.cloudinary.com/dwkdt0lbo/image/upload/v1676985198/CampSite/wallpapersden.com_artistic-cityscape-cool-illustration_wxl_q5abpe.jpg"
                alt="" class="card-img-top" />
        </div>
        <div class="col form-col right-round mr-5">
            <div class="card shadow bg-darker p-4 px-5 right-round">
                <div class="card-body bg-darker ">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3 mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>